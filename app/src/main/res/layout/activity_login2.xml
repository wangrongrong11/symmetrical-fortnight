<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.activity.LoginActivity">

    <include
        android:id="@+id/layout_topbar"
        layout="@layout/project_topbar"
        />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:layout_centerHorizontal="true"
        android:textColor="#696969"
        android:textSize="35sp"
        android:layout_marginTop="170dp"/>

    <LinearLayout
        android:id="@+id/login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/tv_welcome"
        android:layout_marginTop="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/et_login_id"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:drawableStart="@mipmap/ic_login_account"
                android:drawablePadding="8dp"
                android:background="@null"
                android:singleLine="true"
                android:textSize="14sp"
                android:hint=" 输入账号："/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/login_id"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_login_pwd"
            android:drawablePadding="14dp"
            android:background="@null"
            android:singleLine="true"
            android:textSize="14sp"
            android:hint="密码："/>


        <ImageView
            android:id="@+id/content_hide_or_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/content_show"
            android:layout_gravity="center"
           />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_remember_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login_password"
        android:layout_marginTop="90dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@drawable/checkbox_button"
            android:text="   记住密码"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginEnd="40dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_login_in_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_remember_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_message_background"
        android:text="登录"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bt_login_in_new"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:src="@mipmap/login_tuzi" />

</RelativeLayout>